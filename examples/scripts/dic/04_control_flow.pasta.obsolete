// ----------------------------------------------------------------------------
// 複雑な制御フローの例
// ----------------------------------------------------------------------------

＊ゲームループ
    ＠＊game_over：false
    ＠＊score：0
    ＠turn：1
    
    さくら：ゲームスタート！
    
    ＠while：{＊game_over} == false
        さくら：ターン{turn}
        
        ＠＊score：{＊score} + 10
        ＠turn：{turn} + 1
        
        ＠if：{＊score} >= 100
            さくら：\\s[4]100点達成！
            ＠＊game_over：true
        ＠elif：{turn} > 10
            さくら：\\s[1]ターン数上限です
            ＠＊game_over：true
    
    さくら：ゲーム終了！
    さくら：最終スコア: {＊score}点
    
    ＠if：{＊score} >= 100
        うにゅう：\\s[4]大成功！
    ＠else
        うにゅう：\\s[0]お疲れ様

＊状態マシン
    ＠state：start
    ＠running：true
    
    ＠while：{running} == true
        ＠if：{state} == start
            さくら：スタート状態
            ＠state：running
        ＠elif：{state} == running
            さくら：実行中状態
            ＠state：paused
        ＠elif：{state} == paused
            さくら：一時停止状態
            ＠state：end
        ＠else
            さくら：終了状態
            ＠running：false
    
    うにゅう：状態マシン完了

