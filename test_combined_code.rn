pub mod メイン_1 {
    use pasta_stdlib::*;
    use crate::actors::*;

    pub fn __start__(ctx, args) {
        ctx.local.カウンタ = 10;
        ctx.actor = さくら;
        yield Actor(ctx.actor.name);
        yield Talk(pasta_stdlib::word("", "挨拶", []));
        yield Talk("！");
        ctx.actor = うにゅう;
        yield Actor(ctx.actor.name);
        yield Talk("やっほー。");
        for a in crate::pasta::call(ctx, "自己紹介", #{}, ()) { yield a; }
        ctx.local.カウンタ = 1;
        for a in crate::pasta::call(ctx, "カウント表示", #{}, (ctx.local.カウンタ,)) { yield a; }
        for a in crate::pasta::call(ctx, "会話分岐", #{}, ()) { yield a; }
    }
    pub fn 自己紹介_1(ctx, args) {
        ctx.actor = さくら;
        yield Actor(ctx.actor.name);
        yield Talk("私はさくらです。");
        ctx.actor = うにゅう;
        yield Actor(ctx.actor.name);
        yield Talk("僕はうにゅうだよ。");
        for a in crate::pasta::call(ctx, "趣味紹介", #{}, ()) { yield a; }
    }

    pub fn 趣味紹介_1(ctx, args) {
        ctx.actor = さくら;
        yield Actor(ctx.actor.name);
        yield Talk("私の趣味は読書です。");
        ctx.actor = うにゅう;
        yield Actor(ctx.actor.name);
        yield Talk("僕はゲームが好き。");
    }

    pub fn カウント表示_1(ctx, args) {
        ctx.actor = さくら;
        yield Actor(ctx.actor.name);
        yield Talk("カウンターは");
        yield Talk(`${ctx.local.値です}`);
        yield Talk("。");
    }

    pub fn 会話分岐_1(ctx, args) {
        ctx.actor = さくら;
        yield Actor(ctx.actor.name);
        yield Talk(pasta_stdlib::word("", "場所の天気は", []));
        yield Talk(pasta_stdlib::word("", "天気だね", []));
        yield Talk("。");
        ctx.actor = うにゅう;
        yield Actor(ctx.actor.name);
        yield Talk("そうだね。");
        for a in crate::pasta::call(ctx, "別の話題", #{}, ()) { yield a; }
    }

    pub fn 別の話題_1(ctx, args) {
        ctx.actor = さくら;
        yield Actor(ctx.actor.name);
        yield Talk("ところで、明日は何する？");
        ctx.actor = うにゅう;
        yield Actor(ctx.actor.name);
        yield Talk("まだ決めてないなぁ。");
    }

}

pub mod __pasta_trans2__ {
    use pasta_stdlib::*;

    pub fn scene_selector(scene, filters) {
        let id = pasta_stdlib::select_scene_to_id(scene, filters);
        match id {
            1 => crate::メイン_1::__start__,
            2 => crate::メイン_1::自己紹介_1,
            3 => crate::メイン_1::趣味紹介_1,
            4 => crate::メイン_1::カウント表示_1,
            5 => crate::メイン_1::会話分岐_1,
            6 => crate::メイン_1::別の話題_1,
            _ => |_ctx, _args| { yield pasta_stdlib::Error(`シーンID ${id} が見つかりませんでした。`); },
        }
    }
}

pub mod pasta {
    pub fn call(ctx, scene, filters, args) {
        let func = crate::__pasta_trans2__::scene_selector(scene, filters);
        for a in func(ctx, args) { yield a; }
    }
}
